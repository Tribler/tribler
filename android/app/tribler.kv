#:kivy 1.9.2


##########

<BarBoxLayout@BoxLayout>:
    text_size: self.size
    font_size: '25sp'
    markup: True
    
    canvas:
        Color:
            rgba: 1, 1, 1, .5


##########

<FlatButton@Button>:
    markup: True
    size_hint: (1, .5)
    font_size: '25sp'
    text_size: self.size


##########

<HomeScreen>
    orientation: 'vertical'

    top_pane: top_pane
    content_pane: content_pane

    canvas.before:

        Color:
            rgba: 1, 1, 1, 1
            
        Rectangle:
            pos: self.pos
            size: self.size
            
    BoxLayout:
        id: top_pane
        orientation: 'vertical'
        
        canvas.before:
        
            Color:
                rgba: 1, 0, 0, 1
                
            Rectangle:
                pos: self.pos
                size: self.size
                
        BarBoxLayout:
            id: title_panel
            orientation: 'horizontal'
            
            Button:
                text: '<-'
                size_hint: (None, None)
                size: (dp(50), dp(50))
                on_press: root.go_back()
                
            Label:
                text: root.title
                size_hint: (1, .5)
                font_size: '25sp'
                text_size: self.size
                
            Button:
                text: 'o-'
                size_hint: (None, None)
                size: (dp(50), dp(50))
                on_press: root.go_search()
                
        BarBoxLayout:
            id: search_panel
            orientation: 'horizontal'
            
            TextInput:
                id: search_bar
                
            Button:
                text: 'go'
                on_press: root.go_search()
                
        BarBoxLayout:
            id: tabs_panel
            orientation: 'horizontal'
            
            FlatButton:
                text: '*'
                background_color: [1, 1, 1, .5]
                on_press: root.go_favs()
                
            FlatButton:
                text: 'Recent'
                background_color: [1, 1, 1, .5]
                on_press: root.go_recent()
                
            FlatButton:
                text: 'My'
                background_color: [1, 1, 1, .5]
                on_press: root.go_mine()
                
            FlatButton:
                text: '+'
                background_color: [1, 1, 1, 0]
                on_press: root.add_video()
                
    RecycleView:
        id: content_pane


##########