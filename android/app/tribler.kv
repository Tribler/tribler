#:kivy 1.9.2


########## Buttons


<FlatButton@Button>
    markup: True
    background_color: [0, 0, 0, 0]
    font_size: '20sp'
    

########## Screens


<HomeScreen>
    orientation: 'vertical'
    
    top_pane: top_pane
    content_pane: content_pane
    
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
            
        Rectangle:
            pos: self.pos
            size: self.size
            
    BoxLayout:
        id: top_pane
        orientation: 'vertical'
        size_hint_y: .2
        canvas.before:
            Color:
                rgba: 1, 0, 0, 1
                
            Rectangle:
                pos: self.pos
                size: self.size
                
        BoxLayout:
            id: title_panel
            orientation: 'horizontal'
            
            FlatButton:
                text: 'Menu'
                on_press: root.go_menu()
                
            Label:
                text: root.title
                font_size: '30sp'
                
            FlatButton:
                text: 'Search'
                on_press: root.go_search()
                
        BoxLayout:
            id: search_panel
            orientation: 'horizontal'
            
            FlatButton:
                text: '<-'
                on_press: root.go_back()
                
            TextInput:
                id: search_bar
                hint_text: 'Search Tribler'
                on_text_validate: root.start_search()
                
            FlatButton:
                text: 'X'
                on_press: search_bar.text = ''
                
        BoxLayout:
            id: tabs_panel
            orientation: 'horizontal'
            padding: [10, 10, 0, 10]
            
            FlatButton:
                text: '*'
                on_press: root.go_favs()
                
            FlatButton:
                text: 'Recent'
                on_press: root.go_recent()
                
            FlatButton:
                text: 'My'
                on_press: root.go_mine()
                
            FlatButton:
                text: '+'
                on_press: root.add_video()
                
    RecycleView:
        id: content_pane
            